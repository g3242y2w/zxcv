void swap_sign(const int size, int array[]){
    if(array == NULL){
        return;
    }
    for(int i = 0; i < size; i++){
        if(array[i] > 0){
            array[i] = -array[i];
        }
        else if(array[i] < 0){
            array[i] = array[i] * -1;
        }
        else if(array[i] == 0){
            array[i] = 0;
        }
    }
}
